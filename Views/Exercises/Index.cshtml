@{

    Layout = "Guest/_Layout";
    string name = "Silvia";
    string surname = "Dugato";
    //es2
    int getSumm(int num){
        int sum = 0;
        for( int i =0; i<= num; i++ ){
            sum += i;
        }
        return sum;
    }
    //es3
    string str = "nel mezzo del cammin di nostra vita";
    int letterACount(string phrase, char ch)
    {

        int freq = phrase.Where(x => (x == ch)).Count();
        return freq;
    }

    //es 4
    List<int> numCollection = new();
    while (numCollection.Count < 20){
        
        int num = new Random().Next(1, 90);
        if (!numCollection.Contains(num)) numCollection.Add(num);
    }
    
        
    

}

